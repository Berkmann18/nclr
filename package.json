{
  "name": "nclr",
  "version": "0.1.0",
  "description": "Set of pre-defined coloured console logs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "fmt": "eslint -c .eslintrc.js *.js src/*.js --fix",
    "doc:lint": "documentation lint src/**",
    "doc:md": "documentation build src/** -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && npm run doc:md",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Berkmann18/nclr.git"
  },
  "keywords": [
    "CLI",
    "colour",
    "colors",
    "console",
    "log"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/nclr/issues"
  },
  "homepage": "https://github.com/Berkmann18/nclr#readme",
  "dependencies": {
    "colors": "^1.3.2"
  },
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.7.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^23.6.0",
    "test-console": "^1.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  }
}
