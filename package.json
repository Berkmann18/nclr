{
  "name": "nclr",
  "version": "1.2.1",
  "description": "Set of pre-defined coloured console logs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "fmt": "eslint -c ./config/.eslintrc.js *.js --fix",
    "doc:lint": "documentation lint index.js",
    "doc:md": "documentation build index.js -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && documentation readme index.js -s Documentation",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "lint": "npm run fmt && npm run lint:md",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/nclr.git"
  },
  "keywords": [
    "CLI",
    "colour",
    "colors",
    "console",
    "log"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/nclr/issues"
  },
  "homepage": "https://github.com/Berkmann18/nclr#readme",
  "dependencies": {
    "chalk": "^2.4.1"
  },
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.12.4",
    "test-console": "^1.1.0",
    "travis-deploy-once": "^5.0.9"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
